{
  "name": "test-outline",
  "displayName": "Test Outline",
  "description": "Outline view for Mocha and Cypress tests",
  "version": "0.0.1",
  "publisher": "ricowilcke",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "url": "https://github.com/Ranitzky/test-outline"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "testOutline.addSkip",
        "title": "Add .skip"
      },
      {
        "command": "testOutline.removeSkip",
        "title": "Remove .skip"
      },
      {
        "command": "testOutline.addOnly",
        "title": "Add .only"
      },
      {
        "command": "testOutline.removeOnly",
        "title": "Remove .only"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "testOutline.addSkip",
          "when": "view == testOutline && viewItem =~ /canSkip/"
        },
        {
          "command": "testOutline.removeSkip",
          "when": "view == testOutline && viewItem =~ /canRemoveSkip/"
        },
        {
          "command": "testOutline.addOnly",
          "when": "view == testOutline && viewItem =~ /canOnly/"
        },
        {
          "command": "testOutline.removeOnly",
          "when": "view == testOutline && viewItem =~ /canRemoveOnly/"
        }
      ],
      "commandPalette": [
        {
          "command": "testOutline.addSkip",
          "when": "false"
        },
        {
          "command": "testOutline.removeSkip",
          "when": "false"
        },
        {
          "command": "testOutline.addOnly",
          "when": "false"
        },
        {
          "command": "testOutline.removeOnly",
          "when": "false"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "testOutline",
          "name": "Test Outline"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./",
    "build": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  }
}
